import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionEvent.*;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

public class Help extends JFrame implements ActionListener{

    public Container cp;
    public JLabel Text;
    public JButton Back;

    public Help(){
        super("Help Center");
        Initial();
        setComponent();
        Finally() ;
    }
    public void Initial(){
        cp = getContentPane();
        cp.setLayout(null);
    }

    public void setComponent(){
        //คำว่า Help ที่ลอยๆ
        // Text = new JLabel("Help Center");
        // Text.setFont(new Font("Javanese Text", Font.BOLD , 25));
        // Text.setBounds(10, 10, 25, 25);

        //ปุ่มกลับไปหน้า Login
        Back = new JButton("Back to Login");
        Back.setBounds(15, 415, 120, 30);
        
        Back.setActionCommand("BackToLogin");
        Back.addActionListener(this);
        cp.add(Back);


    }

    public void Finally(){
        setSize(400, 500);
        setVisible(true);
        setResizable(true);
        setLocationRelativeTo(null);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    }

    public void actionPerformed(ActionEvent e) {
        if ("BackToLogin".equals(e.getActionCommand())) {
            Form1 Form1 = new Form1();
            Form1.setVisible(true);
            dispose();
            }
    }

}
